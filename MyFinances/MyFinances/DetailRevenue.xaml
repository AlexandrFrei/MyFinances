<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFinances.DetailRevenue"
             Title="Доходы">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="label1" Text="Название" FontSize="Medium" />
            <Entry x:Name="nameEntry" />
            <!--<Label x:Name="label2" Text="Тип" FontSize="Medium" /> <Entry x:Name="typeEntry" /> -->
            <Label x:Name="label3" Text="Сумма (руб.)" FontSize="Medium"/>
            <Entry x:Name="countEntry" Keyboard="Numeric"/>
            <Label x:Name="label4" Text="Дата" FontSize="Medium" />
            <DatePicker x:Name="datePicker" Format="D"></DatePicker>

            <StackLayout Orientation="Horizontal" VerticalOptions="End">
                <Button x:Name="SaveButton" Text="Сохранить" Clicked="SaveButton_Clicked" HorizontalOptions="StartAndExpand"></Button>
                <Button x:Name="CancelButton" Text="Отменить" Clicked="CancelButton_Clicked" HorizontalOptions="EndAndExpand"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>